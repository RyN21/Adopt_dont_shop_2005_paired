<% content_for :title, "Application - Adopt Don't Shop" %>

<section class="show">
  <p>Name: <%= @app.name %></p>
  <p>Address: <%= @app.address %></p>
  <p>City: <%= @app.city %></p>
  <p>State: <%= @app.state %></p>
  <p>Zip: <%= @app.zip %></p>
  <p>Phone: <%= @app.phone_number %></p>
  <p>Description: <%= @app.description %></p>
  <%  @app.pets.each do |pet| %>
    <p><%= link_to "#{pet.name}", "/pets/#{pet.id}" %>
    <p><%= button_to "Approve Application for #{pet.name}", "/pets/#{pet.id}/apps/#{@app.id}", method: :patch %>
  <% end %>
</section>
