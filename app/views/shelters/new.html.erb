<% content_for :title, "New Shelter - Adopt Don't Shop" %>


  <section class="form">
    <h1>Create a New Shelter </h1>

    <%= form_tag "/shelters" do %>
      <%= label_tag :name %>
      <%= text_field_tag :name %>
      <%= label_tag :address %>
      <%= text_field_tag :address %>
      <%= label_tag :city %>
      <%= text_field_tag :city %>
      <%= label_tag :state %>
      <%= text_field_tag :state %>
      <%= label_tag :zip_code %>
      <%= text_field_tag :zip_code %>
      <%= submit_tag "Create Shelter" %>
    <% end %>
  </section>
