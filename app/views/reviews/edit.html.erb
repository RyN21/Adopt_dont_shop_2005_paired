<% content_for :title, "Edit Review - Adopt Don't Shop" %>

  <header>
  </header>
  <nav>
    <ul>
      <li><%= link_to "All Pets", "/pets" %></li>
      <li><%= link_to "All Shelters", "/shelters" %></li>
    </ul>
  </nav>
  <section class="form">
    <h1>Edit Review</h1><br>

    <% flash.each do |type, msg| %>
      <div>
        <%= msg %>
      </div><br><br><br>
    <% end %>

    <%= render partial: 'review_form', locals: { path: "/reviews/#{@review.id}",
                                                 method: :patch,
                                                 button: 'Update Review',
                                                 review: @review } %>

  </section>
