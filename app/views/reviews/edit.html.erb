<% content_for :title, "Edit Review - Adopt Don't Shop" %>

  <header>
  </header>
  <nav>
    <ul>
      <li><%= link_to "All Pets", "/pets" %></li>
      <li><%= link_to "All Shelters", "/shelters" %></li>
    </ul>
  </nav>
  <section class="form">
    <h1>Edit Review</h1><br>

    <% flash.each do |type, msg| %>
      <div>
        <%= msg %>
      </div><br><br><br>
    <% end %>

    <%= form_tag "/reviews/#{@review.id}", method: :patch do %>
      <%= label_tag :title %>
      <%= text_field_tag :title, @review.title %><br>
      <%= label_tag :rating %>
      <%= text_field_tag :rating, @review.rating %><br>
      <%= label_tag :content %>
      <%= text_field_tag :content, @review.content %><br>
      <%= label_tag :image %>
      <%= text_field_tag :image, @review.image %><br><br>
      <%= submit_tag "Update Review" %>
    <% end %>
  </section>
