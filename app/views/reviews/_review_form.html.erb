<%= form_tag path, method: method do %>
  <%= label_tag :title %><br>
  <%= text_field_tag :title, @review.title %><br><br>
  <%= label_tag :rating %><br>
  <%= number_field_tag :rating, nil, within: 1..5 %><br><br>
  <%= label_tag :content %><br>
  <%= text_field_tag :content, @review.content %><br><br>
  <%= label_tag :image %><br>
  <%= text_field_tag :image, @review.image %><br><br><br>

  <%= submit_tag button %>
<% end %>
